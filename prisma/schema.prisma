// ==========================================
// PRISMA CONFIGURATION
// ==========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url        = env("DIRECT_DATABASE_URL")
  directUrl  = env("DIRECT_DATABASE_URL")
}

// ==========================================
// MODELS
// ==========================================

model Link {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  subtitle  String?
  href      String
  icon      String?
  category  String

  @@map("link")
}

model Announcement {
  id          Int                      @id @default(autoincrement())
  createdAt   DateTime                 @default(now())
  title       String
  content     String?
  date        DateTime
  readByUsers AnnouncementReadStatus[]

  @@map("announcement")
}

model Department {
  id    String @id @default(cuid())
  code  Int    @unique
  name  String
  users User[]

  @@map("departments")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model User {
  id                String                   @id @default(cuid())
  name              String?
  email             String?                  @unique
  emailVerified     DateTime?
  image             String?
  accounts          Account[]
  sessions          Session[]
  readAnnouncements AnnouncementReadStatus[]

  // --- CUSTOM FIELDS ---
  password          String?
  role              String                   @default("standard")
  ticketNo          String                   @unique
  designation       String?
  contactNo         String?
  sailPNo           String?
  department        Department?              @relation(fields: [departmentId], references: [id])
  departmentId      String?

  @@map("user")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtoken")
}

model AnnouncementReadStatus {
  id             String       @id @default(cuid())
  userId         String
  announcementId Int
  readAt         DateTime     @default(now())
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  announcement   Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)

  @@unique([userId, announcementId])
  @@map("announcementreadstatus")
}

// ==========================================
// CIRCULARS (WITH VECTOR EMBEDDING)
// ==========================================

model Circular {
  id          Int       @id @default(autoincrement())
  headline    String
  fileUrls    String[]
  publishedAt DateTime  @default(now())

  // embedding vector (for AI search)
  embedding   Unsupported("vector(768)")?

  @@map("circulars")
}

// ==========================================
// HOLIDAY MODELS
// ==========================================

enum HolidayType {
  CH // Closed / Public Holiday
  FH // Festival Holiday
  RH // Restricted Holiday
}

model HolidayMaster {
  id    Int           @id @default(autoincrement())
  name  String        @unique
  type  HolidayType
  years HolidayYear[]

  @@map("holidaymaster")
}

model HolidayYear {
  id              Int           @id @default(autoincrement())
  date            DateTime
  year            Int
  holidayType     HolidayType
  holidayMasterId Int
  holidayMaster   HolidayMaster @relation(fields: [holidayMasterId], references: [id], onDelete: Cascade)

  @@index([year])
  @@map("holidayyear")
}
